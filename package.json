{
  "name": "audstack-inhouse",
  "version": "1.0.0",
  "description": "Audstack REST API with NestJS 9.x",
  "author": "Tobiadiks",
  "license": "MIT",
  "scripts": {
    "rimraf": "./node_modules/rimraf/bin.js",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/src/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start:repl": "nest start --entryFile repl",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm-migration-create": "typeorm migration:create -n myMigration",
    "typeorm-migration-generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n FirstMigration",
    "typeorm-migration-run": "ts-node ./node_modules/typeorm/cli.js migration:run -d dist/typeorm-cli.config",
    "typeorm-migration-revert": "ts-node ./node_modules/typeorm/cli.js migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^9.4.1",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^9.4.1",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/mapped-types": "2.0.1",
    "@nestjs/platform-express": "^9.4.1",
    "@nestjs/swagger": "^7.0.3",
    "@nestjs/throttler": "^4.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "@types/geojson": "^7946.0.10",
    "@types/multer": "^1.4.7",
    "axios": "^1.5.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "csv-parser": "^3.0.0",
    "express-basic-auth": "^1.2.1",
    "geojson": "^0.5.0",
    "handlebars": "^4.7.7",
    "nodemailer": "^6.9.2",
    "nodemailer-express-handlebars": "^6.1.0",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "resend": "^1.0.0",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.16",
    "yup": "^1.1.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.1",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^9.4.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.1",
    "@types/nodemailer": "^6.4.8",
    "@types/nodemailer-express-handlebars": "^4.0.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.{!(module),}.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "/src/migrations",
      "/src/helpers",
      "/src/main.ts",
      "/src/repl.ts",
      ".constants.ts",
      ".guard.ts",
      ".config.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
